                        }
                    ]
                },
                {
                    id: 4,
                    title: "Miscellaneous",
                    startDate: "2025-04-01",
                    endDate: "2026-03-31",
                    background: "Various administrative and operational tasks that support the overall functioning of GSI projects.",
                    tasks: [
                        {
                            id: 1,
                            name: "Administrative Support",
                            link: "",
                            dueDate: "2026-03-31",
                            status: "pending"
                        }
                    ]
                }
            ]
